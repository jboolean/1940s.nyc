    "@types/express": "^4.17.13",
    "@types/geojson": "^7946.0.8",
    "@types/lodash": "^4.14.172",
    "@types/pg": "^7.14.11",
    "@types/node": "^10.17.51",
    "@types/prettier": "^2.3.2",
    "@types/serverless": "^1.78.35",
    "@types/sharp": "^0.28.3",
    "@types/source-map-support": "^0.5.3",
    "@types/stripe": "^8.0.296",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-squarespace": "^2.0.0",
    "eslint-plugin-prettier": "^3.4.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "serverless": "^2.60.3",
    "serverless-domain-manager": "^5.1.5",
    "serverless-lambda-edge-pre-existing-cloudfront": "^1.1.5",
    "serverless-offline": "^6.9.0",
    "serverless-plugin-select": "^2.0.0-rc.1",
    "serverless-plugin-typescript": "^2.0.0",
    "serverless-secrets-plugin": "^0.1.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "JSONStream": "^1.3.5",
    "aws-sdk": "^2.983.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "geojson": "^0.5.0",
    "geojson-precision": "^1.0.0",
    "pg": "^8.7.1",
