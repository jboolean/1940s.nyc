    "sharp": "^0.28.3",
    "source-map-support": "^0.5.19",
    "stripe": "^8.174.0",
    "typeorm": "^0.2.34",
    "typeorm-naming-strategies": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0"
    ]
  },
  "engines": {
    "node": "^14"
  }
