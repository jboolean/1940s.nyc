{
  "name": "fourtiesnyc-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run routes && serverless offline start --stage dev --host dev.1940s.nyc --noPrependStageInUrl",
    "debug": "export SLS_DEBUG=* && node --inspect ./node_modules/.bin/serverless offline --stage dev --host dev.1940s.nyc --noPrependStageInUrl",
    "routes": "tsoa routes",
    "deploy:dry": "serverless package --stage production",
    "deploy": "npm run install-aws-sharp && npm run lint:strict && serverless deploy --stage $STAGE",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ext .js --ext .ts src",
    "lint:fix": "npm run lint -- --fix",
    "lint:strict": "npm run lint -- --max-warnings 0",
    "install-aws-sharp": "rm -rf node_modules/sharp && SHARP_IGNORE_GLOBAL_LIBVIPS=1 npm install --arch=x64 --platform=linux sharp",
    "types": "tsc"
  },
  "author": "Julian Boilen",
  "license": "ISC",
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.741.0",
