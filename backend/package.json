{
  "name": "fourtiesnyc-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "serverless offline start --stage dev --host dev.1940s.nyc --noPrependStageInUrl",
    "deploy:dry": "serverless package --stage production",
    "deploy": "npm run install-aws-sharp && npm run lint:strict && serverless deploy --stage production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ext .js --ext .ts src",
    "lint:fix": "npm run lint -- --fix",
    "lint:strict": "npm run lint -- --max-warnings 0",
    "install-aws-sharp": "rm -rf node_modules/sharp && SHARP_IGNORE_GLOBAL_LIBVIPS=1 npm install --arch=x64 --platform=linux sharp"
  },
  "author": "Julian Boilen",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/eslint": "^8.4.6",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/express": "^4.17.14",
    "@types/geojson": "^7946.0.10",
    "@types/lodash": "^4.14.188",
    "@types/node": "^10.17.51",
    "@types/pg": "^8.6.5",
    "@types/prettier": "^2.4.2",
    "@types/serverless": "^3.12.8",
    "@types/sharp": "^0.31.0",
    "@types/source-map-support": "^0.5.6",
    "@types/stripe": "^8.0.296",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.25.0",
    "eslint-config-jboolean": "^0.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.5.1",
    "serverless": "^3.23.0",
    "serverless-domain-manager": "^6.2.0",
    "serverless-lambda-edge-pre-existing-cloudfront": "^1.2.0",
    "serverless-offline": "^11.2.1",
    "serverless-plugin-select": "^2.0.0-rc.1",
    "serverless-plugin-typescript": "^2.1.4",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "aws-sdk": "^2.1227.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "geojson": "^0.5.0",
    "geojson-precision": "^1.0.0",
    "JSONStream": "^1.3.5",
    "pg": "^8.8.0",
    "pg-query-stream": "^4.2.4",
    "reflect-metadata": "^0.1.13",
    "serverless-http": "^3.1.0",
    "sharp": "^0.31.2",
    "source-map-support": "^0.5.21",
    "stripe": "^10.17.0",
    "typeorm": "^0.3.10",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0"
    ]
  },
  "engines": {
    "node": "^16"
  }
}
